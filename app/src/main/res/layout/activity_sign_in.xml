<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:id="@+id/layout_signIn"
    android:paddingTop="200dp"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <EditText
        android:id="@+id/et2_mail"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_background"
        android:layout_margin="7dp"
        android:drawableRight="@drawable/ic_email"
        android:textSize="24sp"
        android:padding="10dp"
        android:hint="@string/email"
        app:layout_constraintLeft_toLeftOf="@id/layout_signIn"
        app:layout_constraintRight_toRightOf="@id/layout_signIn"
        app:layout_constraintTop_toTopOf="@id/layout_signIn"
        android:textColorHint="@color/gray700"/>
    <EditText
        android:id="@+id/et2_pass"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:drawableRight="@drawable/ic_visible"
        android:background="@drawable/btn_background"
        android:layout_margin="7dp"

        android:textSize="24sp"
        android:padding="10dp"
        android:hint="@string/pass"
        app:layout_constraintLeft_toLeftOf="@id/layout_signIn"
        app:layout_constraintRight_toRightOf="@id/layout_signIn"
        app:layout_constraintTop_toBottomOf="@id/et2_mail"
        android:textColorHint="@color/gray700"/>
    <Button
        android:id="@+id/btn2_signIn"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="@string/btn_signUp"
        android:textColor="@color/gray900"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:background="#94E1CBCB"
        app:layout_constraintLeft_toLeftOf="@id/layout_signIn"
        app:layout_constraintRight_toRightOf="@id/layout_signIn"
        app:layout_constraintTop_toBottomOf="@id/et2_pass"
        />





</androidx.constraintlayout.widget.ConstraintLayout>