<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_signUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond"
    tools:context=".SignUp"
    android:layout_gravity="center"
    android:padding="13dp">

    <EditText
        android:id="@+id/et1_name"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_background"
        android:drawableRight="@drawable/ic_con"
        android:hint="@string/Name"
        android:padding="10dp"
        android:textColorHint="@color/gray700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toTopOf="@id/layout_signUp" />

    <EditText
        android:id="@+id/et1_mail"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_margin="7dp"
        android:background="@drawable/edt_background"
        android:drawableRight="@drawable/ic_email"
        android:hint="@string/email"
        android:padding="10dp"
        android:textColorHint="@color/gray700"
        android:textSize="20sp"
        android:inputType="textEmailAddress"

        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toBottomOf="@id/et1_name" />

    <EditText
        android:id="@+id/et1_phone"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_margin="7dp"
        android:background="@drawable/edt_background"
        android:inputType="phone"

        android:drawableRight="@drawable/ic_baseline_phone_24"
        android:hint="@string/mobile"
        android:padding="10dp"
        android:textColorHint="@color/gray700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toBottomOf="@id/et1_mail" />

    <EditText
        android:id="@+id/et1_pass"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_margin="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edt_background"

        android:hint="@string/pass"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/gray700"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toBottomOf="@id/et1_phone" />

    <EditText
        android:id="@+id/et1_rePass"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_margin="7dp"
        android:background="@drawable/edt_background"
        android:hint="@string/rePass"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/gray700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toBottomOf="@id/et1_pass" />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/alegreya_italic"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:text="@string/btn_signUp"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="@id/layout_signUp"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toBottomOf="@id/et1_rePass" />

    <ImageView
        android:id="@+id/show"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="205dp"
        android:src="@drawable/ic_baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@id/et1_pass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/et1_pass"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toTopOf="@id/et1_pass"
        app:layout_constraintVertical_bias="0.466" />

    <ImageView
        android:id="@+id/show2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="205dp"
        android:src="@drawable/ic_baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@id/et1_rePass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/et1_rePass"
        app:layout_constraintRight_toRightOf="@id/layout_signUp"
        app:layout_constraintTop_toTopOf="@id/et1_rePass"
        app:layout_constraintVertical_bias="0.466" />
</androidx.constraintlayout.widget.ConstraintLayout>